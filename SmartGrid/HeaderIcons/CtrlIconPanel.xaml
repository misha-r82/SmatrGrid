<UserControl x:Class="SmartGrid.HeaderIcons.CtrlIconPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SmartGrid"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
<ToolBar>
        <ItemsControl ItemsSource="{Binding Source={x:Static local:WorkSpace.Instance}, Path=CoreHeaderIcon.IconCollection}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <RibbonSplitButton SmallImageSource="{Binding Icon}" Command="Redo" ItemsSource="{Binding IconCollection}">
                        <RibbonSplitButton.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="-25,0,0,0">
                                    <Image Source="{Binding Icon}" Width="16" Height="16" Margin="2,0"/>
                                    <TextBlock Text="{Binding Name}" />
                                </StackPanel>
                            </DataTemplate>
                        </RibbonSplitButton.ItemTemplate>
                    </RibbonSplitButton>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
    </ItemsControl>
</ToolBar>
</UserControl>
