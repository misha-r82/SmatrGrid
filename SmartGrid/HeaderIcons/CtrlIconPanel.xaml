<UserControl x:Class="SmartGrid.HeaderIcons.CtrlIconPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SmartGrid"
             xmlns:iconEditor="clr-namespace:SmartGrid.HeaderIcons"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
<ToolBar>
    <ToolBar.CommandBindings>
            <CommandBinding Command="iconEditor:IconEditorCommands.AddIcon" Executed="CommandBinding_OnExecuted" />
    </ToolBar.CommandBindings>
    <ItemsControl ItemsSource="{Binding Source={x:Static local:WorkSpace.Instance}, Path=CoreHeaderIcon.IconCollection}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <RibbonSplitButton SmallImageSource="{Binding Icon}" 
                                       Command="iconEditor:IconEditorCommands.AddIcon"
                                       CommandParameter="{Binding}"
                                       ItemsSource="{Binding IconCollection}">
                        <RibbonSplitButton.Resources>
                            <Style TargetType="{x:Type RibbonMenuItem}">
                                <Setter Property="Header" Value="{Binding Path=Name}" />
                                <Setter Property="Command" Value="iconEditor:IconEditorCommands.AddIcon" />
                                <Setter Property="CommandParameter" Value="{Binding }"/>
                                <Setter Property="ImageSource" Value="{Binding Icon}" />
                            </Style>
                        </RibbonSplitButton.Resources>
</RibbonSplitButton>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
    </ItemsControl>
</ToolBar>
</UserControl>
