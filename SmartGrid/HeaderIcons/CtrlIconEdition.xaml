<UserControl x:Class="SmartGrid.HeaderIcons.CtrlIconEdition"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SmartGrid.HeaderIcons"
             xmlns:controls="clr-namespace:SmartGrid.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" DataContextChanged="CtrlIconEdition_OnDataContextChanged">
    <UserControl.CommandBindings>
        
    </UserControl.CommandBindings>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Image Source="{Binding Icon}" Width="16" Height="16"/>
            <controls:EditableLable Text="{Binding Path=Name}">
                <controls:EditableLable.CommandBindings>
                    <CommandBinding Command="{x:Static local:IconEditorCommands.AddIcon}" Executed="CommandAdd_OnExecuted" CanExecute="CommandBinding_OnCanExecute"/>
                </controls:EditableLable.CommandBindings>
            </controls:EditableLable>
        </StackPanel>
        
        <ListView Name="lstMain" Grid.Row="1" ItemsSource="{Binding IconCollection}" HorizontalContentAlignment="Stretch" BorderThickness="0" Margin="5,0,0,0">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <local:CtrlIconEdition/>
                </DataTemplate>
            </ListView.ItemTemplate>
            <ListView.ContextMenu>
                <ContextMenu Name="NodeMenu">
                    <MenuItem Name="itmDel" Header="Delete" Command="Delete"/>
                </ContextMenu>
            </ListView.ContextMenu>
        </ListView>
    </Grid>
</UserControl>
